<%layout("/layouts/boilerplate")-%>
<body>
    <div class="row mb-5">
       <form action="/listings/<%=info[0]._id%>/?_method=PUT" novalidate class="needs-validation" method="post">     <!-- enctype="multipart/form-data"  -->
            <div class="col-8 offset-2">
            <b> <h3 class="mt-3">Edit Listing</h3></b>
        <div class="mb-3">
            <label for="title"  class="form-label">Title</label>
            <input name="title" placeholder="enter title" required value="<%=info[0].title%>" class="form-control" type="text">
            
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control" required><%=info[0].description%></textarea>
      </div>
    
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="price" class="form-control" required value="<%=info[0].price%>" placeholder="enter price" type="number">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="country" class="form-control" required value="<%=info[0].country%>" placeholder="enter country" type="text">
            </div>
        </div>
      
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="location" value="<%=info[0].location%>" class="form-control" required placeholder="enter location" type="text">
        </div>
        <button  class=" add-btn btn btn-dark mt-4   mb-3 ">Add</button>
    </div>
    
    </form>
</div>
</body>





