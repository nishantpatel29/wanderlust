<% layout("/layouts/boilerplate")-%>
<body>
    <div class="row mb-5">
        <form action="/listings" method="post" novalidate  class="needs-validation" enctype="multipart/form-data"  >
            <div class="col-8 offset-2">
            <b> <h3 class="mt-3">Create A New Listing</h3></b>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="title" placeholder="enter title" class="form-control" required type="text">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter The Title </div>
            
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" class="form-control" required placeholder="enter description" ></textarea>
        <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter The Description </div>
      </div>
   
      <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="image" class="form-control" required type="file">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="price" class="form-control" required placeholder="enter price" type="number">
                <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter The Price </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="country" class="form-control" required placeholder="enter country" type="text">
                <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter The Country </div>
            </div>
        </div>
      
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="location" class="form-control" required placeholder="enter location" type="text">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter The Location </div>
        </div>
        <button  class=" add-btn btn btn-dark mt-4   mb-3 ">Add</button>
    </div>
    
    </form>
</div>

</body>
